<div class="center jumbotron">
<p id="notice"><%= notice %></p>

<h1>Bills</h1>
<div class="city-block">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-md-2">Bill name</th>
      <th class="col-md-2">Tour name</th>
      <th class="col-md-2">Bill amount</th>
      <th class="col-md-2">Tax</th>
      <th class="col-md-2">Other</th>
      <th class="col-md-2">Bill total</th>
      <th class="col-md-2">Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td class="col-md-2"><%= bill.booking.book_name %></td>
        <td class="col-md-2"><%= bill.booking.tour_name %></td>
        <td class="col-md-2"><%= bill.booking.book_amount %></td>
        <td class="col-md-2"><%= bill.tax %></td>
        <td class="col-md-2"><%= bill.other %></td>
        <td class="col-md-2"><%= bill.bill_total %></td>
        <td class="col-md-2"><%= bill.payment %></td>
        <td class="col-md-4">
        <%= link_to 'Show', bill , class: "btn btn-info" %>
        <%= link_to 'Edit', edit_bill_path(bill) ,class: "btn  btn-warning" %>
        <%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' },class: "btn  btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>