<div class="center jumbotron">
<p id="notice"><%= notice %></p>

<h1>Packages</h1>
<div class="city-block">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-md-2">Pkg title</th>
      <th class="col-md-2">Pkg days</th>
      <th class="col-md-2">Pkg desc</th>
      <th class="col-md-2">Pkg price</th>
      <% if user_signed_in? %>
      <% if current_user.has_role? :superadmin %>
      <th colspan="3"></th>
      <% end %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td class="col-md-2"><%= package.pkg_title %></td>
        <td class="col-md-2"><%= package.pkg_days %></td>
        <td class="col-md-2"><%= package.pkg_desc %></td>
        <td class="col-md-2"><%= package.pkg_price %></td>
        <% if user_signed_in? %>
        <% if current_user.has_role? :superadmin %>
        <td class="col-md-4">
        <%= link_to 'Show', package , class: "btn btn-info"%>
        <%= link_to 'Edit', edit_package_path(package),class: "btn  btn-warning" %>
        <%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn  btn-danger" %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<% if current_user.has_role? :superadmin %>
<%= link_to 'New Package', new_package_path , class: "btn btn-info" %>
<% end %>
<% end %>

</div>